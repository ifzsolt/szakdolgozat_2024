<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuk.MenuLoginActivity"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_enter"
        android:alpha="0.7" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="28dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Üdv!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@drawable/default_option_border_bg"
        android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Kérem Regisztráljon, vagy ha regisztrált lépjen be a program használatához!"
                android:textColor="#03A9F4"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:textColor="@color/white"
            android:background="@drawable/bg_enter_btn"
            android:textSize="15sp"
            android:layout_margin="5sp"
            />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_enter_btn"
            android:textSize="15sp"
            android:layout_margin="5sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rólam:"
            android:layout_gravity="center"
            android:textColor="#03A9F4"
            android:layout_margin="5sp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5sp">
            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="12sp"
                android:background="@drawable/icon_facebook"/>
            <ImageView
                android:id="@+id/iv_github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12sp"
                android:background="@drawable/icon_github"/>
            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12sp"
                android:background="@drawable/icon_instagram"/>




        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
